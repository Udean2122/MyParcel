<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:scrollbars="none"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ijo"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/background2" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="100"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/backasset3"
                    android:padding="4dp"
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:layout_height="30dp"/>

                <TextView
                    android:text="Profile"
                    android:textColor="#fff"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_weight="85"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:src="@drawable/backasset3"
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:layout_height="30dp"/>

            </LinearLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:src="@drawable/user1"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_width="80dp"
                android:layout_height="80dp"/>

            <TextView
                android:id="@+id/namaFragmentProfile"
                android:text="User Name"
                android:layout_marginTop="3dp"
                android:textSize="18dp"
                android:textColor="#fff"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:fontFamily="@font/poppins_light"
                android:textColor="#fff"
                android:text="User"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_below="@id/ijo"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                app:cardUseCompatPadding="true"
                android:layout_margin="5dp"
                app:cardCornerRadius="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/usernameFragmentProfile"
                        android:layout_width="match_parent"
                        android:text="Username"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_height="wrap_content"/>

                    <View
                        android:background="#D6D6D6"
                        android:layout_marginTop="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>

                    <TextView
                        android:id="@+id/nomorTeleponFragmentProfile"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:text="0899889918"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_height="wrap_content"/>

                    <View
                        android:background="#D6D6D6"
                        android:layout_marginTop="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>

                    <TextView
                        android:id="@+id/emailFragmentProfile"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:text="Username@username.com"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_height="wrap_content"/>

                    <View
                        android:background="#D6D6D6"
                        android:layout_marginTop="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:weightSum="100"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/passwordFragmentProfile"
                            android:text="password"
                            android:inputType="textPassword"
                            android:fontFamily="@font/poppins_regular"
                            android:layout_weight="70"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:text="ubah"
                            android:gravity="end"
                            android:textColor="@color/warnaHijau"
                            android:fontFamily="@font/poppins_regular"
                            android:layout_weight="28"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <View
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="15dp"
                        android:background="#D6D6D6"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardUseCompatPadding="true"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                app:cardCornerRadius="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:weightSum="100"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/judulAlamatFragmentProfile"
                            android:text="Add Address"
                            android:fontFamily="@font/poppins_regular"
                            android:textColor="#000"
                            android:layout_weight="60"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>

                        <ImageView
                            android:id="@+id/tambahAlamatFragmentProfile"
                            android:src="@drawable/tambahalamatasset9"
                            android:layout_weight="40"
                            android:layout_width="0dp"
                            android:layout_height="25dp"/>

                    </LinearLayout>

                    <View
                        android:layout_marginTop="5dp"
                        android:background="#D6D6D6"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>

                    <TextView
                        android:id="@+id/alamatLengkapFragmentProfile"
                        android:text="press tambah alamat to make your address"
                        android:layout_marginTop="5dp"
                        android:maxLines="3"
                        android:textSize="13dp"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:weightSum="100"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <View
                            android:layout_weight="84"
                            android:layout_width="0dp"
                            android:layout_height="0dp"/>

                        <ImageView
                            android:id="@+id/editAlamatFragmentProfile"
                            android:src="@drawable/iconeditasset3"
                            android:padding="5dp"
                            android:layout_weight="8"
                            android:layout_width="0dp"
                            android:layout_height="30dp"/>

                        <ImageView
                            android:id="@+id/deleteAlamatFragmentProfile"
                            android:src="@drawable/tongsmphiconasset3"
                            android:padding="5dp"
                            android:layout_weight="8"
                            android:layout_width="0dp"
                            android:layout_height="30dp"/>

                    </LinearLayout>



                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardUseCompatPadding="true"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                app:cardCornerRadius="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:weightSum="100"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Riwayat Pesanan"
                            android:fontFamily="@font/poppins_regular"
                            android:textColor="#000"
                            android:layout_weight="100"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>


                    </LinearLayout>

                    <View
                        android:layout_marginTop="5dp"
                        android:background="#D6D6D6"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerViewRiwayatPesananFragmentProfile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>



                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </RelativeLayout>



</ScrollView>