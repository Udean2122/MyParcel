<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bgasset23"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_gravity="center"
        android:src="@drawable/logoasset2"
        android:layout_width="190dp"
        android:layout_height="90dp"/>

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Login"
                android:textSize="30dp"
                android:gravity="center"
                android:textColor="#11998E"
                android:fontFamily="@font/poppins_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>



            <EditText
                android:id="@+id/emailLogin"
                android:hint="Email"
                android:paddingStart="25dp"
                android:paddingEnd="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="13dp"
                android:fontFamily="@font/poppins_regular"
                android:background="@drawable/bg_order"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <RelativeLayout
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/passwordLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_order"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="Password"
                    android:paddingStart="25dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="10dp"
                    android:textSize="13dp" />

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/hidePasswordLogin"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/notseeasset12"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>

                <ImageView
                    android:id="@+id/seePasswordLogin"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/seeasset13"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/lupaPasswordLogin"
                android:layout_marginTop="10dp"
                android:textSize="10dp"
                android:text="Lupa password ?"
                android:gravity="center"
                android:fontFamily="@font/poppins_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            
            
            <ImageView
                android:id="@+id/daftarButton"
                android:layout_marginTop="10dp"
                android:src="@drawable/daftarbuttonasset10"
                android:layout_width="match_parent"
                android:layout_height="80dp"/>

            <ImageView
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/atauasset19"
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <LinearLayout
                android:layout_marginTop="15dp"

                android:orientation="horizontal"
                android:weightSum="50"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/facebookDaftar"
                    android:src="@drawable/facebooklogoasset20"
                    android:layout_weight="10"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="40dp"/>

                <View
                    android:layout_weight="7"
                    android:layout_width="0dp"
                    android:layout_height="0dp"/>

                <ImageView
                    android:id="@+id/googleDaftar"
                    android:src="@drawable/googlelogoasset21"
                    android:layout_weight="10"
                    android:layout_width="0dp"
                    android:layout_height="50dp"/>

            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Belum punya akun ?"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="5dp"
                    android:textSize="9dp"
                    android:fontFamily="@font/poppins_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/daftarAkunLogin"
                    android:text="Daftar sekarang"
                    android:textColor="#19dc88"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="15dp"
                    android:textSize="9dp"
                    android:fontFamily="@font/poppins_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>